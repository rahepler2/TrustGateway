# =============================================================================
# Nexus Trust Gateway — Environment Variables
# =============================================================================
# Copy this file to .env and customize for your environment:
#   cp example.env .env
#
# IMPORTANT: Change all passwords below before deploying.
# =============================================================================

# -- Postgres -----------------------------------------------------------------
PG_USER=gateway
PG_PASS=CHANGE_ME_postgres_password
PG_DB=gatewaydb

# -- Nexus credentials --------------------------------------------------------
NEXUS_USER=admin
NEXUS_PASS=CHANGE_ME_nexus_password

# -- Grafana ------------------------------------------------------------------
GRAFANA_ADMIN_PASSWORD=CHANGE_ME_grafana_password

# -- OSSF Worker --------------------------------------------------------------
OSSF_TIMEOUT=300

# -- Scan Policy --------------------------------------------------------------
POLICY_MAX_CVSS=7.0
POLICY_BLOCK_CRITICAL=true
POLICY_BLOCK_HIGH=true
POLICY_BLOCK_NET=true
POLICY_BLOCK_FS=false
POLICY_BLOCK_MALWARE=true

# -- Workers ------------------------------------------------------------------
SCAN_WORKERS=3

# -- Nexus Docker registry ports ----------------------------------------------
NEXUS_DOCKER_GROUP_PORT=9443
NEXUS_DOCKER_TRUSTED_PORT=9444
NEXUS_DOCKER_PROXY_PORT=9445

# -- Nexus Setup (used by: docker compose run --rm nexus-setup) ---------------
NEXUS_ADMIN_PASS=CHANGE_ME_nexus_admin_password
GATEWAY_SVC_PASS=CHANGE_ME_gateway_svc_password
DEVELOPER_PASS=CHANGE_ME_developer_password

# -- API key (optional — protects gateway endpoints) --------------------------
# TRUST_GATEWAY_API_KEY=CHANGE_ME_api_key
