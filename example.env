# =============================================================================
# Nexus Trust Gateway — Environment Variables
# =============================================================================
# Copy this file to .env and customize for your environment:
#   cp example.env .env
# =============================================================================

# -- Postgres -----------------------------------------------------------------
PG_USER=trivy
PG_PASS=trivy_pass
PG_DB=gatewaydb

# -- Nexus credentials --------------------------------------------------------
NEXUS_USER=admin
NEXUS_PASS=admin123

# -- MinIO (S3-compatible storage) --------------------------------------------
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_BUCKET=scan-reports

# -- Grafana ------------------------------------------------------------------
GRAFANA_ADMIN_PASSWORD=admin

# -- OSSF Worker --------------------------------------------------------------
OSSF_TIMEOUT=300

# -- Scan Policy --------------------------------------------------------------
POLICY_MAX_CVSS=7.0
POLICY_BLOCK_CRITICAL=true
POLICY_BLOCK_HIGH=true
POLICY_BLOCK_NET=true
POLICY_BLOCK_FS=false
POLICY_BLOCK_MALWARE=true

# -- Workers ------------------------------------------------------------------
SCAN_WORKERS=3

# -- Nexus Docker registry ports ----------------------------------------------
NEXUS_DOCKER_GROUP_PORT=9443
NEXUS_DOCKER_TRUSTED_PORT=9444
NEXUS_DOCKER_PROXY_PORT=9445

# -- API key (optional — protects gateway endpoints) --------------------------
# TRUST_GATEWAY_API_KEY=change-me-in-production
