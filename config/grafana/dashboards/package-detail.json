      "title": "SBOM Components",
      "type": "stat",
      "targets": [{
        "rawSql": "SELECT COALESCE((result->'sbom'->>'component_count')::int, 0) AS components FROM jobs WHERE id = '${job_id}';",
        "refId": "A",
        "format": "table"
      }]
    },
    {
      "datasource": { "type": "postgres", "uid": "${DS_GATEWAY_POSTGRESQL}" },
      "fieldConfig": {
        "defaults": { "color": { "mode": "fixed", "fixedColor": "text" } }
      },
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 1 },
      "id": 6,
      "options": { "colorMode": "none", "graphMode": "none", "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false }, "textMode": "auto" },
      "title": "Scanned At",
      "type": "stat",
      "targets": [{
        "rawSql": "SELECT to_char(created_at, 'YYYY-MM-DD HH24:MI:SS') AS scanned_at FROM jobs WHERE id = '${job_id}';",
        "refId": "A",
        "format": "table"
      }]
    },
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 5 },
      "id": 51,
      "title": "Policy Evaluation — Why It Passed or Failed",
      "type": "row"
    },
    {
      "datasource": { "type": "postgres", "uid": "${DS_GATEWAY_POSTGRESQL}" },
      "fieldConfig": {
        "defaults": {
          "custom": { "align": "left", "displayMode": "auto", "filterable": false }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "reason" },
            "properties": [
              { "id": "custom.width", "value": 900 },
              { "id": "custom.displayMode", "value": "color-text" },
              { "id": "thresholds", "value": { "mode": "absolute", "steps": [{ "color": "green", "value": null }] } }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "idx" },
            "properties": [{ "id": "custom.width", "value": 50 }]
          }
        ]
      },
      "gridPos": { "h": 6, "w": 24, "x": 0, "y": 6 },
      "id": 10,
      "options": { "showHeader": true, "footer": { "show": false } },
      "title": "Policy Reasons",
      "type": "table",
      "targets": [{
        "rawSql": "SELECT ROW_NUMBER() OVER () AS idx, reason FROM (SELECT jsonb_array_elements_text(result->'reasons') AS reason FROM jobs WHERE id = '${job_id}' AND result->'reasons' IS NOT NULL) sub;",
        "refId": "A",
        "format": "table"
      }]
    },
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 12 },
      "id": 52,
      "title": "CVE Details (Trivy)",
      "type": "row"
    },
    {
      "datasource": { "type": "postgres", "uid": "${DS_GATEWAY_POSTGRESQL}" },
      "fieldConfig": {
        "defaults": {
          "custom": { "align": "auto", "displayMode": "auto", "filterable": true }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "severity" },
            "properties": [
              { "id": "custom.width", "value": 100 },
              { "id": "custom.displayMode", "value": "color-background-solid" },
              { "id": "mappings", "value": [
                { "type": "value", "options": {
                  "critical": { "color": "dark-red", "text": "CRITICAL" },
                  "high": { "color": "orange", "text": "HIGH" },
                  "medium": { "color": "yellow", "text": "MEDIUM" },
                  "low": { "color": "green", "text": "LOW" },
                  "unknown": { "color": "text", "text": "UNKNOWN" }
                }}
              ]}
            ]
          },
          {
            "matcher": { "id": "byName", "options": "cve_id" },
            "properties": [{ "id": "custom.width", "value": 160 }]
          },
          {
            "matcher": { "id": "byName", "options": "package" },
            "properties": [{ "id": "custom.width", "value": 180 }]
          },
          {
            "matcher": { "id": "byName", "options": "installed" },
            "properties": [{ "id": "custom.width", "value": 130 }]
          },
          {
            "matcher": { "id": "byName", "options": "fixed" },
            "properties": [{ "id": "custom.width", "value": 130 }]
          },
          {
            "matcher": { "id": "byName", "options": "title" },
            "properties": [{ "id": "custom.width", "value": 500 }]
          }
        ]
      },
      "gridPos": { "h": 14, "w": 24, "x": 0, "y": 13 },
      "id": 20,
      "options": { "showHeader": true, "footer": { "show": true, "reducer": ["count"], "fields": ["cve_id"] } },
      "title": "Vulnerabilities",
      "type": "table",
      "targets": [{
        "rawSql": "SELECT cve->>'id' AS cve_id, cve->>'severity' AS severity, cve->>'pkg' AS package, cve->>'installed' AS installed, cve->>'fixed' AS fixed, cve->>'title' AS title, cve->>'target' AS target FROM (SELECT jsonb_array_elements(result->'cves') AS cve FROM jobs WHERE id = '${job_id}' AND result->'cves' IS NOT NULL) sub ORDER BY CASE cve->>'severity' WHEN 'critical' THEN 0 WHEN 'high' THEN 1 WHEN 'medium' THEN 2 WHEN 'low' THEN 3 ELSE 4 END;",
        "refId": "A",
        "format": "table"
      }]
    },
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 27 },
      "id": 53,
      "title": "SBOM — Software Bill of Materials",
      "type": "row"
    },
    {
      "datasource": { "type": "postgres", "uid": "${DS_GATEWAY_POSTGRESQL}" },
      "fieldConfig": {
        "defaults": { "color": { "mode": "palette-classic" }, "mappings": [] },
        "overrides": []
      },
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 28 },
      "id": 30,
      "options": { "legend": { "displayMode": "table", "placement": "right", "calcs": ["value"] }, "tooltip": { "mode": "single" }, "pieType": "donut", "reduceOptions": { "calcs": ["sum"], "fields": "", "values": false } },
      "title": "License Breakdown",
      "type": "piechart",
      "targets": [{
        "rawSql": "SELECT license, COUNT(*) AS count FROM (SELECT jsonb_array_elements_text(result->'sbom'->'licenses') AS license FROM jobs WHERE id = '${job_id}' AND result->'sbom'->'licenses' IS NOT NULL AND jsonb_array_length(result->'sbom'->'licenses') > 0) sub GROUP BY license ORDER BY count DESC;",
        "refId": "A",
        "format": "table"
      }]
    },
    {
      "datasource": { "type": "postgres", "uid": "${DS_GATEWAY_POSTGRESQL}" },
      "fieldConfig": {
        "defaults": {
          "custom": { "align": "auto", "displayMode": "auto", "filterable": true }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "name" },
            "properties": [{ "id": "custom.width", "value": 280 }]
          },
          {
            "matcher": { "id": "byName", "options": "version" },
            "properties": [{ "id": "custom.width", "value": 150 }]
          },
          {
            "matcher": { "id": "byName", "options": "type" },
            "properties": [{ "id": "custom.width", "value": 120 }]
          }
        ]
      },
      "gridPos": { "h": 8, "w": 16, "x": 8, "y": 28 },
      "id": 31,
      "options": { "showHeader": true, "footer": { "show": true, "reducer": ["count"], "fields": ["name"] } },
      "title": "SBOM Components",
      "type": "table",
      "targets": [{
        "rawSql": "SELECT comp->>'name' AS name, comp->>'version' AS version, comp->>'type' AS type, comp->>'license' AS license FROM (SELECT jsonb_array_elements(result->'sbom'->'components') AS comp FROM jobs WHERE id = '${job_id}' AND result->'sbom'->'components' IS NOT NULL) sub ORDER BY comp->>'name';",
        "refId": "A",
        "format": "table"
      }]
    },
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 36 },
      "id": 54,
      "title": "Scan History for This Package",
      "type": "row"
    },
    {
      "datasource": { "type": "postgres", "uid": "${DS_GATEWAY_POSTGRESQL}" },
      "fieldConfig": {
        "defaults": {
          "custom": { "align": "auto", "displayMode": "auto", "filterable": false }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "verdict" },
            "properties": [
              { "id": "custom.displayMode", "value": "color-text" },
              { "id": "mappings", "value": [{ "type": "value", "options": { "pass": { "color": "green", "text": "PASS" }, "warn": { "color": "orange", "text": "WARN" }, "fail": { "color": "red", "text": "FAIL" }, "error": { "color": "purple", "text": "ERROR" } } }] }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "critical" },
            "properties": [{ "id": "custom.displayMode", "value": "color-background-solid" }, { "id": "color", "value": { "fixedColor": "dark-red", "mode": "fixed" } }]
          },
          {
            "matcher": { "id": "byName", "options": "high" },
            "properties": [{ "id": "custom.displayMode", "value": "color-background-solid" }, { "id": "color", "value": { "fixedColor": "orange", "mode": "fixed" } }]
          }
        ]
      },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 37 },
      "id": 40,
      "options": {
        "showHeader": true,
        "footer": { "show": false }
      },
      "title": "All Scans of This Package",
      "type": "table",
      "targets": [{
        "rawSql": "SELECT j2.id, j2.version, j2.result->>'verdict' AS verdict, COALESCE((j2.result->'trivy'->>'critical')::int, 0) AS critical, COALESCE((j2.result->'trivy'->>'high')::int, 0) AS high, COALESCE((j2.result->'trivy'->>'medium')::int, 0) AS medium, COALESCE((j2.result->'sbom'->>'component_count')::int, 0) AS components, j2.created_at AS scanned FROM jobs j2 WHERE j2.package = (SELECT package FROM jobs WHERE id = '${job_id}') ORDER BY j2.created_at DESC LIMIT 20;",
        "refId": "A",
        "format": "table"
      }]
    }
