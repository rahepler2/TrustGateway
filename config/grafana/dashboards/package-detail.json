      "id": 1,
      "options": { "colorMode": "value", "graphMode": "none", "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false }, "textMode": "auto" },
      "title": "Verdict",
      "type": "stat",
      "targets": [{
        "rawSql": "SELECT result->>'verdict' AS verdict FROM jobs WHERE id = '${job_id}';",
        "refId": "A",
        "format": "table"
      }]
    },
    {
      "datasource": { "type": "postgres", "uid": "${DS_GATEWAY_POSTGRESQL}" },
      "fieldConfig": {
        "defaults": { "color": { "mode": "fixed", "fixedColor": "blue" } }
      },
      "gridPos": { "h": 4, "w": 5, "x": 4, "y": 1 },
      "id": 2,
      "options": { "colorMode": "value", "graphMode": "none", "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false }, "textMode": "auto" },
      "title": "Package",
      "type": "stat",
      "targets": [{
        "rawSql": "SELECT package || CASE WHEN ecosystem = 'docker' THEN ':' ELSE '==' END || version AS name FROM jobs WHERE id = '${job_id}';",
        "refId": "A",
        "format": "table"
      }]
    },
    {
      "datasource": { "type": "postgres", "uid": "${DS_GATEWAY_POSTGRESQL}" },
      "fieldConfig": {
        "defaults": { "color": { "mode": "fixed", "fixedColor": "purple" } }
      },
      "gridPos": { "h": 4, "w": 3, "x": 9, "y": 1 },
      "id": 3,
      "options": { "colorMode": "value", "graphMode": "none", "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false }, "textMode": "auto" },
      "title": "Ecosystem",
      "type": "stat",
      "targets": [{
        "rawSql": "SELECT ecosystem FROM jobs WHERE id = '${job_id}';",
        "refId": "A",
        "format": "table"
      }]
    },
    {
      "datasource": { "type": "postgres", "uid": "${DS_GATEWAY_POSTGRESQL}" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": { "mode": "absolute", "steps": [
            { "color": "green", "value": null },
            { "color": "yellow", "value": 1 },
            { "color": "red", "value": 10 }
          ]}
        }
      },
      "gridPos": { "h": 4, "w": 3, "x": 12, "y": 1 },
      "id": 4,
      "options": { "colorMode": "value", "graphMode": "none", "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false }, "textMode": "auto" },
      "title": "Total CVEs",
      "type": "stat",
      "targets": [{
        "rawSql": "SELECT COALESCE(jsonb_array_length(result->'cves'), 0) AS total_cves FROM jobs WHERE id = '${job_id}';",
        "refId": "A",
        "format": "table"
      }]
    },
    {
      "datasource": { "type": "postgres", "uid": "${DS_GATEWAY_POSTGRESQL}" },
      "fieldConfig": {
        "defaults": { "color": { "mode": "fixed", "fixedColor": "semi-dark-blue" } }
