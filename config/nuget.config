<!-- NuGet.config â€” Point NuGet/dotnet at the Nexus nuget-group repo

     Install on developer machines:
       Place as ~/.nuget/NuGet/NuGet.Config  (Linux/Mac)
       or %APPDATA%\NuGet\NuGet.Config       (Windows)

     Replace <nexus-host> with your Nexus server hostname/IP.
-->
<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <packageSources>
    <clear />
    <add key="nexus-nuget" value="http://<nexus-host>:8081/repository/nuget-group/index.json" />
  </packageSources>
  <packageSourceCredentials>
    <nexus-nuget>
      <add key="Username" value="developer" />
      <add key="ClearTextPassword" value="ask-your-admin" />
    </nexus-nuget>
  </packageSourceCredentials>
</configuration>
